<div class="signup">
    <h2>Signup</h2>

<form class="signup-form">
    <div class="field">
        <label class="label">username</label>
        <div class="control">
            <input class="input" type="username" id="name-signup">
        </div>
    </div>

    <div class="field">
        <label class="label">email</label>
        <div class="control">
            <input class="input" type="email" id="email-signup">
        </div>
    </div>

    <div class="field">
        <label class="label">password</label>
        <div class="control">
            <input class="input" type="password" id="password-signup">
        </div>
    </div>
    <div class="control">
        <button class="button is-primary" id="signup-button">Submit</button>
    </div>
</form>
</div>