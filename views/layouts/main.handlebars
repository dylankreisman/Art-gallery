        </nav>
    </header>


    {{!-- <div class="container"> --}}
        <div class="row">
            <div class="col-2" id="side">
                <div>
                    <div id="top-half-side">
                        <button class="button" id="upload">Upload</button>
                        <button class="button" id="request">Request Art</button>
                    </div>

                    <div id="bottom-half-side">

                        {{#if logged_in}}

                        <button class="no-button" id="logout">Logout</button>
                        {{else}}
                        <a href="/login">Login</a>
                        <a href="/signup">Sign Up</a>
                        {{/if}}
                    </div>
                </div>
            </div>
            <div class="col-10">
                {{{body}}}
            </div>
        </div>

    </div>
