<form action="/upload" enctype="multipart/form-data" method="post">

    <div class="field">
        <label class="label">image_name</label>
        <div class="control">
            <input class="input" id="image-name">
        </div>
    </div>

        <div class="field">
        <label class="label">description</label>
        <div class="control">
            <input class="input" id="image-description">
        </div>
    </div>

    <div class="field">
        <label class="label">category_id</label>
        <div class="control">
            <input class="input" type="integer" id="image-category">
        </div>
    </div>

    <div class="form-group">
        <label for="upload-image-file"></label>
        <input type="file" class="form-control-file" name="upload" id="upload" placeholder="upload-image-file"
            aria-describedby="fileHelpId">
        <small id="fileHelpId" class="form-text text-muted">Please choose an image.</small>
    </div>

    <button type="submit" class="btn btn-primary" value="Upload">Upload</button>

</form>